@model ProiectV1.Models.Request

<h2 class="text-center mt-5">Adaugare produs nou</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form enctype="multipart/form-data" asp-controller="Requests" asp-action="New">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <input class="form-control" placeholder="Titlu Produs" type="text" name="Title" />
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                <br />
                <textarea class="summernote" placeholder="Descriere produs" style="width: 100%; height: 100px;" name="Description"></textarea>
                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

                <br />
                <input class="form-control" placeholder="Pretul Produsului" type="text" name="Price" />
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })

                <br />
                <input type="file" name="ImageFile" class="form-control" />
                @Html.ValidationMessageFor(m => m.PictureUrl, "", new { @class = "text-danger" })

                <br />
                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                         "Selectati categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })

                <br />
                <button class="btn btn-success" type="submit">Adauga produs</button>

            </form>

        </div>
    </div>
</div>
