@model ProiectV1.Models.Request

@*Pagina pe care o vede colaboratorul cand vrea sa vizualizeze un request specific (nu lista cu toate))*@

<br />

<div class="card">

    <div class="card-body">

        <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>

        @*<div class="card-text">@Model.Description</div>*@
        <div class="card-text">@Html.Raw(Model.Description)</div>

        <br />
        <br />
        <img src="@Model.PictureUrl" alt="Imagine Produs" class="img-fluid" width="300" height="200">
        <br />
        <br />

        <span class="justify-content-between flex-row mt-5 alert-success">@Model.Status</span>

        <div class="d-flex justify-content-between flex-row mt-3">
            <div><strong>Pret:</strong> @Model.Price</div>
        </div>
        <div class="d-flex justify-content-between flex-row mt-5">

            <div><i class="bi bi-globe"></i> @Model.Category.CategoryName</div>
            
            <div><i class="bi bi-person"></i> @Model.User.UserName </div>

            <span class="alert-success">@Model.Date</span>

        </div>



    </div>



</div>
