@model ProiectV1.Models.Comment

<h2 class="text-center mt-5">Editare comentariu</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Comments",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {


                @Html.Label("Continut", "Continut comentariu")
                <br />
                <br />
                @Html.EditorFor(m => m.Text, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Text, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Stars", "Rating-ul Produsului")
                <br />
                @Html.Editor("Stars", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Stars, "", new { @class = "text-danger" })
                <br />
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Modifica comentariu</button>

            }
        </div>
    </div>
</div>