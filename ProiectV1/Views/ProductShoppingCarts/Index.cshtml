@model ProiectV1.Models.ProductShoppingCart

<h2>Cosul Meu de Cumparaturi</h2>
@{
    int? total = 0;
}


@foreach (ProiectV1.Models.ProductShoppingCart productcart in ViewBag.ProductShoppingCarts)
{
<div class="card">
    <div class="card-body">


        <h3 class="card-title alert-success py-3 px-3 rounded-2">@productcart.Product.Title</h3>

        <div class="d-flex justify-content-between flex-row mt-5">

            <div><i class="bi bi-globe"></i>Cantitate: @productcart.Quantity</div>
            <span class="alert-success">
                <div><i class="bi bi-person"></i>Pret: @productcart.Price $ </div>
            </span>

        </div>


    </div>
    <form method="post" action="/ProductShoppingCarts/Delete/@productcart.Id">

            <button class="btn btn-danger" type="submit">Sterge din cos</button>

    </form>
        @{
            total += productcart.Price * productcart.Quantity;
        }

</div>
<br />

}
<h3>Total: @total lei</h3>
